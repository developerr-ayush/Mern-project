<% layout('layout/boilerplate') -%>

    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-7 mx-auto">
                <h3>Edit listing</h3>
                <form method="post" action="/listing/<%=listing.id%>" autocomplete="off" class="row needs-validation"
                    novalidate>
                    <div class="mb-3 col-12 col-lg-12">
                        <label for="title" class="form-label">Title</label>
                        <input type="text"
                            class="form-control" name="listing[title]" id="title" placeholder="Title" required min="10"
                            value="<%=listing.title %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Title should be atleast 10 letters
                        </div>
                    </div>
                    <div class="mb-3 col-12 col-lg-12">
                        <label for="desc" class="form-label">Description</label>
                        <textarea type="text"
                            class="form-control" name="listing[description]" id="desc"
                            placeholder="Description" required minlength="50"><%=listing.description %></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Description should be atleast 50 letters
                        </div>
                    </div>
                    <div class="mb-3 col-12 col-lg-12">
                        <label for="image" class="form-label">Image</label>
                        <input type="text" hidden value="New Listing" name="listing[image][filename]">
                        <input type="url"
                            class="form-control" name="listing[image][url]" id="image" placeholder="Image url"
                            value="<%=listing.image.url %>" required>
                    </div>
                    <div class="mb-3 col-12 col-lg-12">
                        <label for="price" class="form-label">Price</label>
                        <input type="number "
                            class="form-control" name="listing[price]" id="price" min="1000" placeholder="Price" 
                            required
                            value="<%=listing.price %>">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Price must be atleast 1000
                        </div>
                    </div>
                    <div class="mb-3 col-12 col-lg-6">
                        <label for="loc" class="form-label">Location</label>
                        <input type="text"
                            class="form-control" name="listing[location]" id="loc" placeholder="Location" required
                            value="<%=listing.location %>">
                    </div>
                    <div class=" mb-3 col-12 col-lg-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text"
                            class="form-control" name="listing[country]" id="country" placeholder="Country"
                            value="<%=listing.country %>">
                    </div>
                    <div class="mb-3 col-12 col-lg-6">
                        <button class="btn btn-danger">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>