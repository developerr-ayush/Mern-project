<html lang="en">
    <%- include('../common/head') %>

    <body>
        <%- include('../common/header') %>

            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="data-showing">
                            <h3 class="title">
                                <%=dataList.title %>
                            </h3>
                            <img src="<%=dataList.image.url%>" alt="<%=dataList.image.filename%>">
